<h1>New Restaurant</h1>
<% if @restaurant.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@restaurant.errors.count, "error") %>
      prohibited this restaurant from being saved:
    </h2>

    <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for Restaurant.new do |f| %>
  <div class="field<%= " field_with_errors" if @restaurant.errors[:name].any?%>">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </div>
  <div class="field<%= " field_with_errors" if @restaurant.errors[:phone].any?%>">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %><br>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %><br>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %><br>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %><br>
  </div>
  <%= f.submit "Create Restaurant" %>
<% end %>
